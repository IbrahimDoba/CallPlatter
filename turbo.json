{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "BETTER_AUTH_URL",
        "BETTER_AUTH_SECRET",
        "UPLOADTHING_TOKEN",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "OPENAI_API_KEY",
        "POLAR_ACCESS_TOKEN",
        "POLAR_WEBHOOK_SECRET",
        "SUCCESS_URL",
        "POLAR_SERVER",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "MARBLE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_POLAR_STARTER_PRODUCT_ID",
        "NEXT_PUBLIC_POLAR_BUSINESS_PRODUCT_ID",
        "NEXT_PUBLIC_POLAR_ENTERPRISE_PRODUCT_ID"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "//#format-lint:fix": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    }
  }
}